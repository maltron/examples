<pretty-config xmlns="http://ocpsoft.org/schema/rewrite-config-prettyfaces" 
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
               xsi:schemaLocation="http://ocpsoft.org/schema/rewrite-config-prettyfaces
                      http://ocpsoft.org/xml/ns/prettyfaces/rewrite-config-prettyfaces.xsd">

    <url-mapping id="not_found">
        <pattern value="/error/notfound"/>
        <view-id value="/faces/error/not_found.xhtml"/>
    </url-mapping>

    <url-mapping id="internal_server">
        <pattern value="/error/internalserver"/>
        <view-id value="/faces/error/internal_server.xhtml"/>
    </url-mapping>
    
    <!-- Event Finding -->
    <url-mapping id="event_details_designation_edition">
        <pattern value="/#{designationEdition}"/>
        <view-id value="/faces/event.xhtml"/>
    </url-mapping>
    
    <!-- Event Registration -->
    <url-mapping id="event_registration">
        <pattern value="/registration/new"/>
        <view-id value="/faces/event_registration.xhtml"/>
    </url-mapping>

</pretty-config>