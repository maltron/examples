<pretty-config xmlns="http://ocpsoft.org/schema/rewrite-config-prettyfaces" 
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
               xsi:schemaLocation="http://ocpsoft.org/schema/rewrite-config-prettyfaces
                      http://ocpsoft.org/xml/ns/prettyfaces/rewrite-config-prettyfaces.xsd">

    <url-mapping id="not_found">
        <pattern value="/error/notfound"/>
        <view-id value="/faces/error/not_found.xhtml"/>
    </url-mapping>

    <url-mapping id="internal_server">
        <pattern value="/error/internalserver"/>
        <view-id value="/faces/error/internal_server.xhtml"/>
    </url-mapping>
    
    <!-- Attendee -->
    <url-mapping id="attendee_new">
        <pattern value="/new"/>
        <view-id value="/faces/new_attendee.xhtml"/>
    </url-mapping>

    <!-- Events for this Attendee -->    
    <url-mapping id="attendee_list_events">
        <pattern value="/event/all"/>
        <view-id value="/faces/attendee/listevents.xhtml"/>
    </url-mapping>
    
    
</pretty-config>