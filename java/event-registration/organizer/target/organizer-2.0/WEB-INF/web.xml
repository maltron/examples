<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <!-- Event Registration: Services -->
    <context-param>
        <param-name>service-event</param-name>
        <param-value>http://localhost:8080/event</param-value>
    </context-param>
    <context-param>
        <param-name>service-attendee</param-name>
        <param-value>http://localhost:8080/attendee</param-value>
    </context-param>
    <context-param>
        <param-name>service-organizer</param-name>
        <param-value>http://localhost:8080/organizer</param-value>
    </context-param>
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/organizer/listevents.xhtml</welcome-file>
    </welcome-file-list>
    
    <security-constraint>
        <display-name>Only Organizer Access</display-name>
        
        <web-resource-collection>
            <web-resource-name>Organizer Folder using Pretty Faces</web-resource-name>
            <description/>
            <url-pattern>/event/*</url-pattern>
        </web-resource-collection>
        
        <web-resource-collection>
            <web-resource-name>Organizer Folder using Faces pages</web-resource-name>
            <description/>
            <url-pattern>/faces/organizer/*</url-pattern>
        </web-resource-collection>
        
        <auth-constraint>
            <description/>
            <role-name>Organizer</role-name>
        </auth-constraint>
        <user-data-constraint>
            <description/>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>OrganizerRealm</realm-name>
        <form-login-config>
            <form-login-page>/login</form-login-page>
            <form-error-page>/login-error.html</form-error-page>
        </form-login-config>
    </login-config>

    <security-role>
        <role-name>Organizer</role-name>
    </security-role>    
    
</web-app>
